{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
        "esModuleInterop": true,
		"target": "es2017",
		"sourceMap": true,
		"allowJs": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"incremental": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}